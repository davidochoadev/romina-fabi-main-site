---
import Logo from "./Logo.astro";
import Hamburger from "./Logo.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import SocialContainer from "./SocialContainer.astro"

---

<header class="w-full sticky top-0 left-0 z-20 h-[100px] items-center justify-center flex flex-row place-content-around">
   <div class="backdrop-blur-sm bg-gradient-to-b from-black/50 via-black/40 to-transparent w-full h-full absolute top-0 z-0"/>
   <div class="lg:w-1/5 z-20 flex flex-row items-center justify-center mx-4">
      <a href="/" class=" p-2 bg-white rounded-full mx-4 hover:scale-110 transition-all duration-300">
         <Logo />
      </a>
   </div>
   <Navigation />
   <SocialContainer />
</header>
