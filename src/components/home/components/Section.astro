---
interface Props {
	title: string
   subtitle: string
   ariaLabel: string
}

const { title, subtitle, ariaLabel } = Astro.props;
---
<section aria-label={ariaLabel} class="px-4 py-6 min-h-screen max-w-screen flex flex-col items-center justify-center bg-white lg:p-[100px] border border-t-gold">
   <div class="flex flex-col gap-2 items-center justify-end w-full py-6">
      <h4 class="sottotitolo spacing">{subtitle}</h4>
      <h3 class="text-5xl playfair text-center">{title}</h3> 
   </div>
   <div class="flex flex-col gap-12 py-6">
      <slot />
   </div>
</section>