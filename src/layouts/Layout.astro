---
import Header from "../components/header/Header.astro"

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="relative">
		<Header />
		<section class="h-[calc(100vh-100px)]">
			<slot name="first" />
		</section>
		<slot />
	</body>
</html>
<style is:global>
	.playfair {
		font-family: 'Playfair Display', serif;
	}
	.sottotitolo {
		@apply text-lg uppercase tracking-widest
	}

	.button {
		@apply mb-4 uppercase text-xs tracking-widest py-4 px-12 bg-black text-white rounded-md transition-all duration-300 hover:bg-white hover:text-black border border-black
	}
</style>
